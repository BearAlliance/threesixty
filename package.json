{
  "name": "threesixty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon dist/bin/start",
    "start:dev": "concurrently npm:start-* --kill-others-on-fail",
    "start-client": "react-scripts start",
    "start-server": "DATABASE_URL=postgresql://localhost:5432 nodemon --exec babel-node server/bin/start",
    "startdb": "docker run --name=mysql1 -d mysql/mysql-server:8.0",
    "build": "rimraf dist && cp -R server/ dist/ && react-scripts build && mv build/* dist/public",
    "test": "react-scripts test --watchAll=false && npm run prettier:check",
    "test:watch": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier:check": "prettier --check --ignore-path .gitignore '**/*.+(ts|js|md|json)'",
    "prettier:fix": "prettier --write --ignore-path .gitignore '**/*.+(ts|js|md|json)'"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "esm": "^3.2.25",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "pg": "^7.12.1",
    "react-redux": "^7.1.1",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@types/express": "^4.17.1",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.11",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-redux": "^7.1.4",
    "@types/react-router": "^5.1.1",
    "@types/react-router-dom": "^5.1.0",
    "bulma": "^0.7.5",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.2",
    "formik": "^1.5.8",
    "husky": "^3.0.8",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "redux": "^4.0.4",
    "rimraf": "^3.0.0",
    "yup": "^0.27.0"
  },
  "proxy": "http://localhost:8000/api",
  "eslintConfig": {
    "extends": "react-app"
  },
  "presets": [
    "@babel/preset-env"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
