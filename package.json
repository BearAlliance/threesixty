{
  "name": "threesixty",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently npm:start-* --kill-others-on-fail",
    "start-client": "react-scripts start",
    "start-server": "nodemon server/bin/www",
    "build": "react-scripts build",
    "test": "react-scripts test && npm run prettier:check",
    "eject": "react-scripts eject",
    "prettier:check": "prettier --check --ignore-path .gitignore '**/*.+(ts|js|md|json)'",
    "prettier:fix": "prettier --write --ignore-path .gitignore '**/*.+(ts|js|md|json)'"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "classnames": "^2.2.6",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "morgan": "~1.9.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "redux": "^4.0.4",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/react-redux": "^7.1.4",
    "@types/react-router-dom": "^5.1.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.11",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/react-router": "^5.1.1",
    "concurrently": "^4.1.2",
    "husky": "^3.0.8",
    "nodemon": "^1.19.3",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "proxy": "http://localhost:8000/api",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
